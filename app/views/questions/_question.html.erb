<div id="<%= dom_id question %>">
  <p>
    <strong>Text:</strong>
    <%= question.text %>
    <% if question.image.representable? %>
      <%= image_tag question.image.representation(resize_to_limit: [100, 100]), alt: "Question Image" %>
    <% else %>
      <p>No image available</p>
    <% end %>
  </p>

</div>
