<%= render @quiz %>

<h2>Questions</h2>

<div id="questions">
  <% @quiz.questions.each do |question| %>
    <%= render question %>
    <p>
      <%= link_to "Show this question", quiz_question_path(@quiz, question) %>
    </p>
  <% end %>
</div>

<div>
  <%= link_to "<- Back to Quizzes", quizzes_path %> |
  <%= link_to "Edit this quiz", edit_quiz_path(@quiz) %> |
  <%= link_to "New question", new_quiz_question_path(@quiz) %>

  <%= button_to "Destroy this quiz", @quiz, method: :delete, data: { turbo_confirm: "Are you sure?" } %>
</div>
